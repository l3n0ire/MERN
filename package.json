{
  "name": "mern",
  "version": "1.0.0",
  "description": "shopping list with MERN stack",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/l3n0ire/MERN.git"
  },
  "author": "Colin Lin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/l3n0ire/MERN/issues"
  },
  "homepage": "https://github.com/l3n0ire/MERN#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.1.0",
    "create-react-app": "^3.4.0",
    "express": "^4.17.1",
    "mongodb": "^3.5.3",
    "mongoose": "^5.9.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  }
}
